global proc DRL_placeOnto() {	string $eg[], $sel[], $res[];	string $nm, $crv, $conv, $mp, $surf, $nrm;	// Получаем выделенный эдж...	$eg = `filterExpand -sm 32`;	// ... и закрепляемый объект	$sel = `ls -fl -l -sl -tr`;	// детачим 	$res = `duplicateCurve -ch 1 -rn 0 -local 0  $eg`;		// Переименовываем по-человечески	$nm = `substitute "^.*\|" $sel[0] ""`;	$crv = `rename $res[0] ($nm + "_crv")`;	$conv = `rename $res[1] ($nm + "_mshToCrv")`;		// Создаём motion path	select -r $crv;	select -add $sel;	$mp = `pathAnimation -fractionMode false -follow false -startTimeU 1`;	$mp = `rename $mp ($nm + "_moPath")`;		// Поворачиваем в соответствием с нормалью	$surf = `substitute "\\..*$" $eg[0] ""`;	select -r $surf;	select -add $sel;	$res = `normalConstraint -weight 1 -aimVector 0 -1 0 -upVector 0 0 1 -worldUpType "scene"`;	$nrm = `rename $res ($nm + "_nrm")`;		// Скидываем в общую группу	select -r $sel;	select -add "Markers";	parent;}