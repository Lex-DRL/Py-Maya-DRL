global proc string[] DRL_batchBakeVertexColor (	string $filePaths_file, // a file containing a paths to the all OBJ's for entire bake pass. Each OBJ is in it's own line	string $settings_file /* A file with 4 lines, containing respectively:	- filepath to bake scene	- the name of vertexBakeSet node	- the name of ShadingGroup node to assign to the imported OBJ's	- whether to forcefully smooth edges or not	*/){	string $files[] = DRL_file_open($filePaths_file);	string $sett[] = DRL_file_open($settings_file);		if (`size $files` < 1) {		warning "No files specified for bake.";		return {};	}	if (`size $sett` < 4) {		warning "Settings file is incorrect.";		return {};	}		int $smooth;	eval ("$smooth = " + $sett[3]);	string $res[] = DRL_bakeVertexColor($files, $sett[0], $sett[1], $sett[2], $smooth);		return $res;}